{
  "name": "@stayradiated/pomo-core",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "test": "dotenv -- vitest --watch=false --testNamePattern=\"^((?!INTEGRATION).)*$\"",
    "test:integration": "dotenv -- vitest --watch=false",
    "tidy": "xo --fix",
    "build": "rm -rf ./dist && tsc"
  },
  "keywords": [],
  "author": {
    "name": "George Czabania"
  },
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@stayradiated/error-boundary": "4.2.1",
    "@stayradiated/pomo-doc": "workspace:*",
    "chrono-node": "2.6.5",
    "colord": "2.9.3",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "mem": "9.0.2",
    "openai": "4.2.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "dotenv": "16.3.1",
    "typescript": "5.2.2",
    "vitest": "0.34.3",
    "xo": "0.56.0"
  },
  "__comment": "The following configs are managed by `@stayradiated/jsconfig`",
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "n/file-extension-in-import": "off",
      "@typescript-eslint/naming-convention": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
