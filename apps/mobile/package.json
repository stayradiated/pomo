{
  "name": "mobile",
  "version": "0.51.0",
  "private": true,
  "scripts": {
    "dev": "POMO_DIR=./tmp vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tidy": "biome format --write; eslint . --config eslint.config.js",
    "pollen": "pollen",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "9.16.0",
    "@sveltejs/adapter-node": "5.2.9",
    "@sveltejs/kit": "2.10.1",
    "@sveltejs/vite-plugin-svelte": "5.0.1",
    "eslint-plugin-svelte": "2.46.1",
    "globals": "15.13.0",
    "knip": "5.39.4",
    "pollen-css": "5.0.1",
    "prettier": "3.4.2",
    "prettier-plugin-svelte": "3.3.2",
    "svelte": "5.11.2",
    "svelte-check": "4.1.1",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "vite": "6.0.3",
    "vitest": "2.1.6"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "1.6.12",
    "@stayradiated/error-boundary": "4.3.0",
    "@stayradiated/pomo-core": "workspace:*",
    "@stayradiated/pomo-doc": "workspace:*",
    "@svelte-put/shortcut": "3.1.2",
    "chrono-node": "2.7.7",
    "date-fns": "4.1.0",
    "date-fns-tz": "3.2.0",
    "lib0": "0.2.99",
    "normalize.css": "8.0.1",
    "p-debounce": "4.0.0",
    "p-queue": "8.0.1",
    "svelte-awesome-color-picker": "3.1.4",
    "svelte-select": "5.8.3",
    "zod": "3.24.1",
    "zod-form-data": "2.0.2"
  },
  "knip": {
    "svelte": {
      "entry": [
        "./src/routes/**/+{layout,page,server,error}{,.server}.{svelte,ts}",
        "./svelte.config.js"
      ],
      "project": ["./src/**/*.ts"]
    },
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$app/*": ["node_modules/@sveltejs/kit/src/runtime/app/*"],
      "$env/*": ["node_modules/@sveltejs/kit/src/runtime/env/*"]
    },
    "ignore": ["pollen.config.js"],
    "ignoreDependencies": [],
    "ignoreBinaries": ["sed"],
    "ignoreExportsUsedInFile": true
  }
}
