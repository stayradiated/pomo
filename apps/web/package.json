{
	"name": "web",
	"version": "0.20.2",
	"private": true,
	"scripts": {
		"dev": "POMO_DIR=./tmp vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"tidy": "prettier --write --plugin-search-dir=. ./src"
	},
	"dependencies": {
		"@stayradiated/error-boundary": "4.1.0",
		"@stayradiated/pomo-core": "workspace:*",
		"@stayradiated/pomo-doc": "workspace:*",
		"@svelte-put/shortcut": "2.0.0",
		"chrono-node": "2.6.4",
		"date-fns": "2.30.0",
		"pollen": "0.0.5",
		"prettier": "3.0.0",
		"prettier-plugin-svelte": "2.10.1",
		"svelte-awesome-color-picker": "2.4.6",
		"svelte-select": "5.6.1",
		"zod": "3.21.4",
		"zod-form-data": "2.0.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "1.3.1",
		"@sveltejs/kit": "1.22.3",
		"date-fns-tz": "2.0.0",
		"svelte": "4.0.5",
		"svelte-check": "3.4.6",
		"tslib": "2.6.0",
		"typescript": "5.1.6",
		"vite": "4.4.4"
	},
	"type": "module",
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": false
	}
}
