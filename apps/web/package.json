{
  "name": "web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "just dev",
    "build": "just build",
    "test": "just test",
    "tidy": "just fix"
  },
  "dependencies": {
    "@floating-ui/dom": "1.6.13",
    "@stayradiated/hydro": "1.1.0",
    "async-mutex": "0.5.0",
    "date-fns": "4.1.0",
    "date-fns-tz": "3.2.0",
    "graphile-migrate": "1.4.1",
    "pg": "8.16.3",
    "replicache": "15.3.0",
    "signia": "0.1.5",
    "svelte-select": "5.8.3",
    "websocket-ts": "2.2.1",
    "ws": "8.19.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@stayradiated/error-boundary": "4.3.0",
    "@sveltejs/adapter-node": "5.4.0",
    "@sveltejs/kit": "2.49.3",
    "@sveltejs/vite-plugin-svelte": "6.2.2",
    "@types/node": "25.0.3",
    "@types/pg": "8.16.0",
    "@types/ws": "8.18.1",
    "eslint": "9.39.2",
    "eslint-plugin-svelte": "3.13.1",
    "id128": "1.6.6",
    "kanel": "3.16.0",
    "kanel-kysely": "0.8.0",
    "kanel-zod": "1.7.0",
    "knip": "5.80.0",
    "kysely": "0.28.9",
    "svelte": "5.46.1",
    "svelte-check": "4.3.5",
    "type-fest": "5.3.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.52.0",
    "vite": "7.3.0",
    "vitest": "4.0.16"
  },
  "knip": {
    "vite": false,
    "vitest": false,
    "svelte": {
      "entry": [
        "./src/routes/**/+{layout,page,server,error}{,.server}.{svelte,ts}",
        "./src/hooks.client.ts",
        "./src/hooks.server.ts",
        "./src/**/*.test.ts",
        "vite.config*.ts"
      ],
      "project": [
        "./src/**/*.ts"
      ]
    },
    "paths": {
      "$env/*": [
        "./node_modules/@sveltejs/kit/src/runtime/env/*"
      ]
    },
    "ignore": [
      ".kanelrc.cjs",
      "gmrc.cjs",
      "justfile",
      "scripts/db/snapshot-schema.ts",
      "src/lib/__generated__/**",
      "src/lib/server/db/log-query.ts"
    ],
    "ignoreDependencies": [
      "@biomejs/biome",
      "graphile-migrate",
      "kanel",
      "kanel-kysely",
      "kanel-zod",
      "svelte-check"
    ],
    "ignoreBinaries": [
      "just"
    ],
    "ignoreExportsUsedInFile": {
      "type": true
    }
  }
}
